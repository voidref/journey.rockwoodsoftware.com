<!doctype html>
%html{:lang => "en-us"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "Marcelo Marfil", :name => "author"}
    %meta{:content => "the journey, journey, ios, iphone, app, notes, scrapbook, app store", :name => "description"}
    %title= current_page.data.title
    = stylesheet_link_tag current_page.data.styles

  %body{:class => page_classes}

    .container
      %header{:class => "header", :role => "banner"}
        = image_tag 'logo.png', :width => 252, :height => 158, :alt => "The Journey"
      %main{:class => "content"}
        = yield
